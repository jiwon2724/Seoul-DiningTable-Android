<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeoulDiningTable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <!-- Splash Screen Transparent. -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@android:color/transparent</item>

        <!-- Status Bar Transparent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="title1">
        <item name="android:textColor">@color/gray_scale_0c0e10</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lotte_dream_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title2">
        <item name="android:textColor">@color/gray_scale_0c0e10</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lotte_dream_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title3">
        <item name="android:textColor">@color/gray_scale_0c0e10</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lotte_dream_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text1">
        <item name="android:textColor">@color/gray_scale_0c0e10</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lotte_dream_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text2">
        <item name="android:textColor">@color/gray_scale_0c0e10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lotte_dream_light</item>
        <item name="android:includeFontPadding">false</item>
